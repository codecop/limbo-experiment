#!/bin/bash
# https://stackoverflow.com/questions/27397865/how-to-write-stdout-to-file-with-colors

# pytest --cov > test_result.log
script -q -c "coverage run -m pytest -s tests/game/" > log/test_result.log
error=$?
script -q -c "coverage report --show-missing" >> log/test_result.log
coverage json -o log/coverage_new.json --pretty-print

cat log/test_result.log

exit $error
